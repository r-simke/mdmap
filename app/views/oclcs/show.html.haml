- model_class = Oclc
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %h2= model_class.human_attribute_name(:number) + ':'
  %br
  = @oclc.number

  %p
    %h2= model_class.human_attribute_name(:marc_record_id) + ':'
    %br
    = @oclc.marc_record_id


.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), oclcs_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_oclc_path(@oclc), :class => 'btn'
  = link_to 'get MarcXML', '#', :class => 'btn getMarcXml', :data => { :path => oclc_path(@oclc) }
