- model_class = MarcRecord
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

= link_to t('.new', :default => t("helpers.links.new")), new_marc_record_path, :class => 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= "Valid?"
      %th= model_class.human_attribute_name(:marc)
      %th= "Created"
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @marc_records.each do |marc_record|
      %tr
        %td= link_to marc_record.id, marc_record_path(marc_record)
        %td
          - if marc_record.isValidMarcXml
            .label.label-success= "valid"
          - else
            .label.label-warning= "not valid"
        %td
          != CodeRay.scan(marc_record.marc.to_s[0...200], :xml).div()
        / %td=l marc_record.created_at
        %td= time_ago_in_words(marc_record.created_at) + " ago"
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_marc_record_path(marc_record), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), marc_record_path(marc_record), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
