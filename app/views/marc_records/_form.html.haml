= form_for @marc_record, :html => { :class => 'form-horizontal' } do |f|
	.control-group
		= f.label :marc, :class => 'control-label'
		.controls
			= f.text_area :marc, :class => 'text_field', :size => "40x20", :style => "width:100%;"
	.form-actions
		= f.submit nil, :class => 'btn btn-primary'
		= link_to t('.cancel', :default => t("helpers.links.cancel")), marc_records_path, :class => 'btn'

/ = form_tag({action: :upload}, multipart: true) do
/   = file_field_tag 'picture'
