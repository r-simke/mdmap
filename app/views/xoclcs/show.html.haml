- model_class = Xoclc
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:edition_id) + ':'
  %br
  = @xoclc.edition_id
%p
  %strong= model_class.human_attribute_name(:oclc_id) + ':'
  %br
  = @xoclc.oclc_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), xoclcs_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_xoclc_path(@xoclc), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), xoclc_path(@xoclc), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
