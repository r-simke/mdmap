- model_class = PerseusRecord

.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %h2= model_class.human_attribute_name(:id) + ': ' + @perseus_record.id.to_s
%p
  %h2
    = "URN:"
    = link_to @perseus_record.urn, "http://catalog.perseus.org/catalog/" + URI.encode( @perseus_record.urn )

-if @perseus_record.edition_id
  %p
    %h2
      = "Edition:"
      = link_to @perseus_record.edition_id, edition_path(@perseus_record.edition_id)

%p
  -if @perseus_record.marc_record_id
    %h2
      =model_class.human_attribute_name(:marc_record_id) + ': '
      = link_to @perseus_record.marc_record_id.to_s, marc_record_path(@perseus_record.marc_record_id)

%p
  != CodeRay.scan(@perseus_record.mods, :xml).div()

  .form-actions
    = link_to t('.back', :default => t("helpers.links.back")), perseus_records_path, :class => 'btn'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_perseus_record_path(@perseus_record), :class => 'btn'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), perseus_record_path(@perseus_record), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
