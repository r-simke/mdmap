= form_for @edition, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field' 
  .control-group
    = f.label :oclc_id, :class => 'control-label'
    .controls
      = f.collection_select(:oclc_id, Oclc.all, :id, :number, :include_blank => "Please select")
  .control-group
    = f.label :best_match_id, :class => 'control-label'
    .controls
      = f.collection_select(:best_match_id, MarcRecord.all, :id, :id, :include_blank => "Please select")
  .control-group
    = f.label :marc_record_id, :class => 'control-label'
    .controls
      = f.collection_select(:marc_record_id, MarcRecord.all, :id, :id, :include_blank => "Please select")
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), editions_path, :class => 'btn'
